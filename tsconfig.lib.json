{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "target": "es2015",
      "module": "es2020",
      "outDir": "./dist",
      "declarationDir": "./dist",
      "skipLibCheck": true
    },
    "angularCompilerOptions": {
      "enableIvy": true
    },
    "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules", "dist"]
  }
  