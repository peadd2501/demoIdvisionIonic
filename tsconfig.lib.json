{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "target": "es2015",
      "module": "es2020",
      "outDir": "./dist",
      "declarationDir": "./dist",
      "skipLibCheck": true,
      "composite": true
    },
    "angularCompilerOptions": {
      "enableIvy": true,
      "strictMetadataEmit": true,
      "compilationMode": "full"
    },
    "include": ["index.ts", "src/**/*.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules", "dist"]
  }
